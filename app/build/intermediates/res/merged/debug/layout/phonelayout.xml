<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/spotify_phone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/song" >

    <LinearLayout
        android:id="@+id/buttns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/phn_play_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="50dp"
            android:contentDescription="@string/play_button"
            android:src="@drawable/play" />

        <ImageView
            android:id="@+id/phn_next_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="50dp"
            android:contentDescription="@string/play_button"
            android:src="@drawable/next" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/label"
        android:layout_below="@+id/buttns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/phn_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="30sp"
            android:maxLines="1" />

        <TextView
            android:id="@+id/phn_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="30sp"
            android:maxLines="1" />

    </LinearLayout>

</RelativeLayout>